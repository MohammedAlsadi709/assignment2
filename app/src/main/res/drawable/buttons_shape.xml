<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CC474746" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="0dp" />
            <stroke android:width="0.5dp" android:color="#000" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#ccc9" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="0dp" />
            <stroke android:width="0.5dp" android:color="#000" />
        </shape>
    </item>
</selector>